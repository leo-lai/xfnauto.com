/* pages/car-bespeak/index2.wxss */
.l-text-theme{color: #fd5e02;}
.l-slted-store{border: 2rpx solid #fd5e02; padding: 15rpx; position: relative; overflow: hidden;}
.l-slted-store image{background-color: #eee;}
.l-slted-store .l-icon-654{position: absolute; right: 0; bottom: 0; line-height: 1; color: #fd5e02;}

.l-store-item{margin: 30rpx 0;}
.l-store-item ._icon icon{display: inline-block; visibility: hidden;}
.l-store-item._active ._icon icon{visibility: visible;}

.l-sltor{border: 2rpx solid #c6c6c6;background-color: #f7f7f7;}
.l-sltor .l-icon-6ac{font-size: 8px; color: #fd5e02;line-height: 1;}
.l-iptor{border: 2rpx solid #c6c6c6;background-color: #f7f7f7;}
.l-iptor [class*='l-icon-']{background-color: #e9e8e9;padding: 10rpx 30rpx; margin-right: 20rpx; font-size: 32rpx;color: #fd5e02;}

.l-time-down text{display: inline-block; min-width: 36rpx; text-align: center; background-color: #fd5e02; color: #fff; padding: 0 4rpx; margin: 4rpx;border-radius: 4rpx; box-sizing: border-box;}

.l-people{display: inline-block; width: 460rpx; padding: 20rpx;}
.l-people ._t{margin-bottom: 10rpx;}
.l-people ._t image{float: right; width: 120rpx; margin-top: 8rpx;}
.l-people ._c{margin-bottom: 10rpx; word-break: break-all; white-space: pre-wrap; text-align:justify; text-justify: inter-word;}
.l-people ._c image{float: left; width: 120rpx; height: 120rpx; margin: 0 20rpx 0 0;}
.l-people ._b .l-rest{border: 2rpx solid #fd5e02; border-radius: 10rpx; padding: 6rpx 0;}

.l-backtop{position: fixed; z-index: 100; right: 0; top: 0; bottom: 0;}
.l-backtop ._inner{position: absolute; top: 50%; transform: translate3d(0, -50%, 0); right: 0;background-color: rgba(209, 209, 209, 0.9); padding: 20rpx;}
.l-backtop ._inner image{display: block;}