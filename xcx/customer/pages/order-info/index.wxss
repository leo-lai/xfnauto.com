/* pages/order-info/index.wxss */
.l-progress-tit{ position: relative; margin: 30rpx 60rpx;text-align: center;}
.l-progress-tit text{margin:auto; display: inline-block; background: #fff; padding: 0 60rpx; color: #999;}
.l-progress-tit::after{ content: ''; display: block; border-top: 2rpx solid #eee; margin-top: -24rpx;}

.l-slted-store{padding: 30rpx 20rpx 30rpx 30rpx; background: #eee;margin-top: 10rpx; border-radius: 4rpx;}
.l-slted-store image{width: 120rpx; height: 120rpx; margin-right: 30rpx;}
.l-slted-store .l-icon-603,
.l-slted-store .l-icon-640{
  margin-left: 20rpx; text-align: center; border-radius: 50%; background: #fff;
  width: 50rpx; height: 50rpx; line-height: 50rpx; font-size: 12px;
}

.l-track-list{padding: 30rpx;}
.l-track-list ._item{margin-bottom: 30rpx;}
.l-track-list ._item:last-child{margin-bottom: 0;}
.l-track-list ._disabled{opacity: 0.3;}
.l-track-list image{width: 80rpx; height: 80rpx; margin:-10rpx 30rpx 0 0;}