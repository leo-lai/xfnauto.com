/* 底部弹窗 */
.l-popup-bottom{position: fixed; z-index: 9999; left:0; bottom: 0; width: 100%; height: 0; visibility: hidden; pointer-events: none; }
.l-popup-bottom::after{content: ''; position: absolute; bottom:0; left: 0; height: 2000px; width: 100%; background: rgb(0, 0, 0); transition: opacity 0.2s; opacity: 0;}
.l-popup-bottom ._inner{position: absolute; left:0; right: 0; bottom: 0; z-index: 1; background-color: #fff; box-shadow: 0 0 1px rgba(0, 0, 0, 0.3); transition: all 0.3s; transform: translate3d(0, 100%, 0); }
.l-popup-bottom ._inner ._close{position: absolute; top: 0.2rem; right: 0.2rem; width: 1.8rem; height: 1.8rem; line-height: 1.8rem; text-align: center; color: #333; font-size: 40rpx; z-index: 1;}
.l-popup-bottom ._inner ._hd{padding: 0.5rem 0.75rem; text-align: center;}
.l-popup-bottom ._inner ._ft{padding:0.75rem;}
.l-popup-bottom ._inner ._bd{ overflow: auto; -webkit-overflow-scrolling: touch; max-height: 800rpx; box-sizing: border-box;}
