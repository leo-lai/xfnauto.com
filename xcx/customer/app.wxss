.l-popup-bottom._show{visibility: visible; overflow: visible; pointer-events: auto; height: 100%; }
.l-popup-bottom._show ._inner{transform: translate3d(0, 0, 0);}
.l-popup-bottom._show::after{ opacity: 0.6;}
