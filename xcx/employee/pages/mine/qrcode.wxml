<!--pages/mine/qrcode.wxml-->
<view class='l-page-full l-bg-white'>
  <view class='l-br'></view>
  <view class='l-text-center'>
    <view class='l-qrcode l-flex-vhc' bindtap='chooseImage'>
      <image wx:if='{{qrcode}}' mode='aspectFit' src='{{qrcode}}'></image> 
      <view wx:else>
        <view>点击上传</view>
        <text>个人微信二维码</text>
      </view>
    </view>
    <view class='l-margin-t l-fs-13' style='color:#ccc;'>我的微信二维码</view>
  </view>
</view>
