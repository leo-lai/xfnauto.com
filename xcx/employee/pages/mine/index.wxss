/* pages/user/index.wxss */
.l-mine-card{
  padding: 60rpx 40rpx;
  background-image: linear-gradient(90deg, #fa5539, #ff6c53);
  color: #fff;
}
.l-circle-icon{
  width: 180rpx; height: 180rpx; box-sizing: border-box;
  background-color: #fff; border-radius: 50%; padding: 50rpx; border: 2rpx solid #eee;
}

.l-mine-menu{padding: 30rpx; text-align: center; margin-top: 60rpx;}
.l-mine-menu ._item{display: inline-block; margin: 0 30rpx;}
.l-mine-menu .l-circle-icon{width: 140rpx; height: 140rpx;}
.l-mine-menu text{display: block; color: #999;margin-top: 15rpx; font-size: 24rpx;}
.l-mine-menu ._hover .l-circle-icon{background-color: #eee;}